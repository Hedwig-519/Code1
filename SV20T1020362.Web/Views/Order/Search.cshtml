@model OrderSearchResult;
@{
    Layout = null;
}
<p style="margin:10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> đơn hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary" >
                <th style="text-align: center">Khách hàng</th>
                <th style="text-align: center">Ngày lập</th>
                <th style="text-align: center">Nhân viên phụ trách</th>
                <th style="text-align: center">Thời điểm duyệt</th>
                <th style="text-align: center">Người giao hàng</th>
                <th style="text-align: center">Ngày nhận giao hàng</th>
                <th style="text-align: center">Thời điểm kết thúc</th>
                <th style="text-align: center">Trạng thái</th>
                <th style="width:40px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CustomerName</td>
                    <td>@item.OrderTime</td>
                    <td>@item.EmployeeName</td>
                    <td>@item.AcceptTime</td>
                    <td>@item.ShipperName</td>
                    <td>@item.ShippedTime</td>
                    <td>@item.FinishedTime</td>
                    <td>@item.StatusDescription</td>
                    <td>
                        <a href="~/Order/Details/@item.OrderID" class="btn btn-info btn-xs">
                            <i class="glyphicon glyphicon-th-list"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div style="text-align: center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch('#formSearch',@p)">@p</a></li>
            }
        }
    </ul>
</div>
