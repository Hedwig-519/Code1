@model SV20T1020362.DomainModels.Category
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" enctype="multipart/form-data" method="post">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color:#f00" })

            </div>
            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description"/>
                @Html.ValidationMessage(nameof(Model.Description), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/products/@(Model.Photo!= " " ? Model.Photo : "noproductimg.png")" class="img img-bordered" style="width:200px" />
                </div>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>