@model SV20T1020362.DomainModels.ProductAttribute;
@{
    ViewBag.Title = "Thay đổi thuộc tính";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post" enctype="multipart/form-data">
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="hidden" name="AttributeID" value="@Model.AttributeID"/>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeName" value="@Model.AttributeName"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeValue" value="@Model.AttributeValue" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị :</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Product/Edit/@Model.ProductID">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>